# GNU Make solution makefile autogenerated by Premake
# Type "make help" for usage help

ifndef config
  config=debug
endif
export config

PROJECTS := chocobun-core ponyban

.PHONY: all clean help $(PROJECTS)

all: $(PROJECTS)

chocobun-core: 
	@echo "==== Building chocobun-core ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f chocobun-core.make

ponyban: chocobun-core
	@echo "==== Building ponyban ($(config)) ===="
	@${MAKE} --no-print-directory -C . -f ponyban.make

clean:
	@${MAKE} --no-print-directory -C . -f chocobun-core.make clean
	@${MAKE} --no-print-directory -C . -f ponyban.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "   debug"
	@echo "   release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   chocobun-core"
	@echo "   ponyban"
	@echo ""
	@echo "For more information, see http://industriousone.com/premake/quick-start"
